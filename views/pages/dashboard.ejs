    <script>
        function twofa(){
            $.ajax({
                url:'/2fa',
                method:"POST",
                dataType:"json",
                success:function(data){
                    console.log(data);
                    $('#secretkey').html('<img src='+data.image+' /><input id="verify" type="text" placeholder="verify" /><button class="btn" onclick="verify()">Verify</button>');
                },
                error:function(err){
                    console.log(err);
                }
            });
        }

        function verify(){
            $.ajax({
                url:'/verify2fa',
                method:"POST",
                dataType:"json",
                data:{data:$('#verify').val()},
                success:function(data){
                    console.log(data);
                    $('#secretkey').html(data.message);
                },
                error:function(err){
                    console.log(err);
                }
            });
        }

        function disabletwofa(){
            $('#disable').html("<form method='POST' action='/disable2fa'><input type='text' placeholder='Enter OTP to disable 2FA' name='disableotp' /></form>");
        }
